<h1>Danh sach ten khach hang</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th >#</th>
      <th >username</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each_with_index do |c, index|%>
    <tr>
        <td><%= index + 1 %></td>
        <td>
            <%=link_to c.name , {:action=> 'show', :id =>c.id}%>
        </td>
        <td>
         <button type="button" class="btn btn-warning">
           <%=link_to "Edit", {:action=> 'edit',:id =>c.id }%>
         </button>
        </td>
        <td>
          <button type="button" class="btn btn-danger"> 
           <%=link_to "Delete", {:action=> 'destroy', :id=>c.id},method: :delete %>
         </button> 
        </td>

    </tr>
      <%end%>
  </tbody>
</table>


